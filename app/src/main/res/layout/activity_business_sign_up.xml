<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_business_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="seu.amaken_application.BusinessSignUpActivity"
    android:background="@color/ColorWhite">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/ColorLighGreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business"
        android:textColor="@color/ColorGreen"
        android:layout_marginTop="45px"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/ColorLighGreen"
         />



    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/view"
        android:layout_toLeftOf="@+id/txt1"
        android:layout_toStartOf="@+id/txt1" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Picture"
        android:textColor="@color/ColorGray"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_alignTop="@+id/image2"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/ColorGray"
        android:layout_below="@+id/image2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/image2"
        android:layout_toEndOf="@+id/image2" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/ColorGray"
        android:layout_below="@+id/txt2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/ColorGray"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txt3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Email"
        android:textColor="@color/ColorGray"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/view2"
        android:layout_alignLeft="@+id/image2"
        android:layout_alignStart="@+id/image2" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/ColorGray"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/view3"
        android:layout_alignLeft="@+id/txt2"
        android:layout_alignStart="@+id/txt2" />
    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business name"
        android:textColor="@color/ColorGray"
        android:layout_marginTop="110dp"
        android:layout_below="@+id/view2"
        android:layout_alignLeft="@+id/image2"
        android:layout_alignStart="@+id/image2" />

    />
    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/ColorGray"
        android:layout_below="@+id/txt4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website"
        android:textColor="@color/ColorGray"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/view5"
        android:layout_alignLeft="@+id/image2"
        android:layout_alignStart="@+id/image2" />

    />
    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/ColorGray"
        android:layout_below="@+id/txt5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp" />

</RelativeLayout>
